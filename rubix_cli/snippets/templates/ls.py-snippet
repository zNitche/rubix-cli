import uos

files = uos.listdir('<var>path</var>')

if len(files) == 0:
    print("No files at '<var>path</var>'")

else:
    for file in files:
        path = f'<var>path</var>/{file}'
        stats = uos.stat(path)

        st_size = str(stats[6])
        st_ctime = str(stats[9])

        row = f'{st_size}" "{st_ctime}" " {path}'

        print(row)
